// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format

// this is like the tasks.json from before
// except with cwd added because package.json is in a subfolder now

// because it's a monorepo each task should be explicitly labeled
// e.g. "vscode-ext: watch" instead of just "npm: watch"
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "vscode-ext: watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$ts-webpack-watch",
      "isBackground": true,
      "options": {
        "cwd": "packages/vscode-ext"
      },
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "vscode-ext: watch-tests",
      "type": "npm",
      "script": "watch-tests",
      "problemMatcher": "$tsc-watch",
      "options": {
        "cwd": "packages/vscode-ext"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build"
    },
    {
      "label": "vscode-ext tasks: watch-tests",
      "dependsOn": ["vscode-ext: watch", "vscode-ext: watch-tests"],
      "problemMatcher": []
    }
  ]
}
