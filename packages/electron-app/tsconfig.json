{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "backend-api": ["../backend/src/index.ts"],
      "backend-app": ["../backend/contracts/app/index.ts"],
      "backend-ui": ["../backend/contracts/ui/index.ts"],
      "backend-utils": ["../backend/src/utils/index.ts"]
    },
    "jsx": "react",
    "target": "es6"
  },
  "include": ["src/**/*", "../backend/src"]
}
