{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "shared": ["../shared/src/index.ts"],
      "shared/*": ["../shared/src/*"],
      "*": ["node_modules/*"]
    },
    "jsx": "react",
    "target": "es6"
  },
  "include": ["src/**/*", "../shared/src"]
}
