{
  "name": "sys-view",
  "displayName": "SysView",
  "description": "View system's call graphs and dependencies",
  "version": "0.0.1",
  "scripts": {
    "build-shared": "npm run build --prefix ../shared",
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "precompile": "cmd /c src.webview\\compile.cmd",
    "prewatch": "cmd /c src.webview\\compile.cmd",
    "prepackage": "cmd /c src.webview\\compile.cmd"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sys-view.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "sys-view.selectFolder",
        "title": "Select Folder",
        "icon": "$(file-directory)"
      },
      {
        "command": "sys-view.openSettings",
        "title": "Settings",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sys-view.openSettings",
          "when": "view == sysViewOne",
          "group": "navigation@1"
        },
        {
          "command": "sys-view.selectFolder",
          "when": "view == sysViewOne",
          "group": "navigation@2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sysViewContainer",
          "title": "SysView",
          "icon": "media/graph_3.svg"
        }
      ]
    },
    "views": {
      "sysViewContainer": [
        {
          "id": "sysViewOne",
          "name": "System View One"
        },
        {
          "id": "sysViewTwo",
          "name": "System View Two"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "sysViewOne",
        "contents": "No folder selected.\n[$(file-directory) Select Folder](command:sys-view.selectFolder)"
      }
    ],
    "configuration": [
      {
        "title": "App Options",
        "properties": {
          "sysView.zoomPercent": {
            "type": "number",
            "default": 100,
            "description": "Zoom level as a percentage (e.g. 100 for normal size)."
          },
          "sysView.fontSize": {
            "type": "number",
            "default": 12,
            "description": "Font size used in the application."
          },
          "sysView.detailsClosed": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "viewTypeA",
                "viewTypeB",
                "detailTypeA",
                "detailTypeB",
                "app"
              ]
            },
            "description": "List of views or details that should be initially closed."
          },
          "sysView.showCompilerGeneratedTypes": {
            "type": "boolean",
            "default": false,
            "description": "Show compiler-generated types in the view."
          },
          "sysView.showCompilerGeneratedMethod": {
            "type": "boolean",
            "default": false,
            "description": "Show compiler-generated methods in the view."
          },
          "sysView.showCompilerGeneratedMenuItem": {
            "type": "boolean",
            "default": false,
            "description": "Show compiler-generated menu items in the view."
          }
        }
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "tsconfig-paths-webpack-plugin": "^4.2.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "sqlio": "^0.0.1"
  }
}
